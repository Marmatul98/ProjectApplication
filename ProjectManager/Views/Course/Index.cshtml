@model IEnumerable<ProjectManager.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (ViewBag.IsAuth)
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (ViewBag.IsAuth)
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseID }) @:|
            }
            @Html.ActionLink("Projects", "Details", new { id = item.CourseID })
            @if (ViewBag.IsAuth)
            {
                @:| @Html.ActionLink("Delete", "Delete", new { id = item.CourseID })
            }
        </td>
    </tr>
}

</table>
